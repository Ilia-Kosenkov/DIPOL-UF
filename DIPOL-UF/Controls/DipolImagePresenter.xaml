<UserControl x:Class="DIPOL_UF.Controls.DipolImagePresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DIPOL_UF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Beige">
    <Grid>
        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding BitmapSource, Mode=OneWay}" Margin="10"/>
    </Grid>
</UserControl>
